<odoo>
    <data>

        <record id="view_analytic_account_tree" model="ir.ui.view">
            <field name="name">account.analytic.tree</field>
            <field name="model">account.analytic.account</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="sf__id"/>
                    <field name="count_occurrence"/> 
                    <field name="duplicate" widget="boolean_toggle"/> 
                </tree>
            </field>
        </record>

        <record id="view_account_account_tree" model="ir.ui.view">
            <field name="name">account.account.tree</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="account_type"/>
                    <field name="sf__id"/>
                    <field name="count_occurrence"/> 
                    <field name="duplicate" widget="boolean_toggle"/>    
                </tree>
            </field>
        </record>

        <record id="view_comite_cible_tree" model="ir.ui.view">
            <field name="name">campagne.comite.tree</field>
            <field name="model">campagne.comite</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_comite_sysmarlig_cible_tree" model="ir.ui.view">
            <field name="name">campagne.comite.sysmarlig.tree</field>
            <field name="model">campagne.comite.sysmarlig</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_campagne_cible_tree" model="ir.ui.view">
            <field name="name">campagne.cible.tree</field>
            <field name="model">campagne.cible</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_campagne_canal_tree" model="ir.ui.view">
            <field name="name">campagne.canal.tree</field>
            <field name="model">campagne.canal</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="view_campagne_levier_tree" model="ir.ui.view">
            <field name="name">campagne.levier.tree</field>
            <field name="model">campagne.levier</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_campagne_log_form" model="ir.ui.view">
            <field name="name">campagne.log.form</field>
            <field name="model">campagne.log</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Lignes">
                            <field name="line_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="sf__id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_campagne_log_tree" model="ir.ui.view">
            <field name="name">campagne.log.fotreerm</field>
            <field name="model">campagne.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>



        <record id="view_export_ops_form" model="ir.ui.view">
            <field name="name">export.ops.form</field>
            <field name="model">export.ops</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="model_name"/>
                            <field name="model_id"/>
                            <field name="mode"/>
                            <field name="operation"/>
                            <field name="done"/>
                        </group>
                        <notebook>
                            <page string="All">
                                <group>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="siege"/>
                                    <field name="comites"/>
                                </group>
                            </page>
                            <page string="Campagne">
                                <group>
                                    <field name="cible"/>
                                    <field name="canal"/>
                                    <field name="creation_comites"/>
                                </group>
                            </page>
                            <page string="Offre">
                                <group>
                                    <field name="levier"/>
                                    <field name="accounts"/>
                                    <field name="campagne"/>
                                </group>
                            </page>
                            <page string="Log">
                                <group>
                                    <field name="create_uid"/>
                                    <field name="create_date"/>
                                    <field name="write_uid"/>
                                    <field name="write_date"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_export_ops_tree" model="ir.ui.view">
            <field name="name">export.ops.tree</field>
            <field name="model">export.ops</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="model_name"/>
                    <field name="model_id"/>
                    <field name="mode"/>
                    <field name="operation"/>
                    <field name="done"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>


        <record id="view_campagne_form" model="ir.ui.view">
            <field name="name">campagne.form</field>
            <field name="model">campagne.campagne</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="siege"/>
                            <field name="cible_id"/>
                            <field name="canal_id"/>
                            <field name="sf__id"/>
                            <field name="in_sysmarlig"/>
                            <field name="is_legacy"/>
                            <field name="count_occurrence"/>
                            <field name="audit_creation_comites"/>
                            <field name="audit_siege"/>
                            <field name="audit_unique"/>
                            <field name="audit_canal"/>
                            <field name="audit_cible"/>
                        </group>
                        <notebook>
                            <page string="Offres">
                            <group>
                                <field name="creation_comites"/>
                            </group>
                            <field name="offre_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="siege"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Comités">
                                <group>
                                    <field name="comite_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                            <page string="Comités sysmarlig">
                                <group>
                                    <field name="comite_sysmarlig_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_campagne_campagne_search" model="ir.ui.view">
            <field name="name">campagne.campagne.search</field>
            <field name="model">campagne.campagne</field>
            <field name="arch" type="xml">
                <search string="Campagne">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Campagne"/>
                    <separator/>
                    <field name="cible_id"/>
                    <field name="canal_id"/>
                    <field name="sf__id"/>
                </search>
            </field>
        </record>

        <record id="view_offre_form" model="ir.ui.view">
            <field name="name">offre.form</field>
            <field name="model">campagne.offre</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="campagne_id"/>
                            <field name="siege"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="levier_id"/>
                            <field name="sf__id"/>
                            <field name="in_sysmarlig"/>
                            <field name="is_legacy"/>
                            <field name="count_occurrence"/>
                            <field name="audit_siege"/>
                            <field name="audit_unique"/>
                            <field name="audit_levier"/>
                        </group>
                        <notebook>
                            <page string="Offres">
                            <group string="Don">
                                <field name="don_account_id"/>
                                <field name="don_axe_1_id"/>
                                <field name="don_axe_2_id"/>
                                <field name="don_axe_3_id"/>
                                </group>
                            <group string="COTIS">
                                <field name="cotis_account_id"/>
                                <field name="cotis_axe_1_id"/>
                                <field name="cotis_axe_2_id"/>
                                <field name="cotis_axe_3_id"/>
                                <field name="cotis_amount"/>
                                </group>
                            <group string="Vivre">
                                <field name="vivre_account_id"/>
                                <field name="vivre_axe_1_id"/>
                                <field name="vivre_axe_2_id"/>
                                <field name="vivre_axe_3_id"/>
                                <field name="vivre_amount"/>
                                </group>
                            <group string="Vente">
                                <field name="vente_account_id"/>
                                <field name="vente_axe_1_id"/>
                                <field name="vente_axe_2_id"/>
                                <field name="vente_axe_3_id"/>
                                <field name="vente_amount"/>
                                </group>
                            <group string="Prod">
                                <field name="prod_account_id"/>
                                <field name="prod_axe_1_id"/>
                                <field name="prod_axe_2_id"/>
                                <field name="prod_axe_3_id"/>
                                <field name="prod_amount"/>
                            </group>   
                            </page>
                            <page string="Comités">
                            <group>
                                <field name="comite_ids" widget="many2many_tags"/>
                            </group>
                            </page>
                            <page string="Comités sysmarlig">
                                <group>
                                    <field name="comite_sysmarlig_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                            <page string="Quantités comités">
                                <group>
                                    <field name="unit_cost"/>
                                </group>
                                <field name="qty_lines_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="comite_id"/>
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_campagne_tree" model="ir.ui.view">
            <field name="name">campagne.tree</field>
            <field name="model">campagne.campagne</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="siege"/>
                    <field name="cible_id"/>
                    <field name="canal_id"/>
                    <field name="creation_comites"/>
                    <field name="sf__id"/>
                    <field name="in_sysmarlig"/>
                    <field name="is_legacy"/>
                    <field name="count_occurrence"/>
                    <field name="audit_creation_comites" widget="boolean_toggle"/>
                    <field name="audit_siege" widget="boolean_toggle"/>
                    <field name="audit_unique" widget="boolean_toggle"/>
                    <field name="audit_canal" widget="boolean_toggle"/>
                    <field name="audit_cible" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_offre_tree" model="ir.ui.view">
            <field name="name">offre.tree</field>
            <field name="model">campagne.offre</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="campagne_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="levier_id"/>
                    <field name="sf__id"/>
                    <field name="in_sysmarlig"/>
                    <field name="is_legacy"/>
                    <field name="count_occurrence"/>
                    <field name="audit_siege" widget="boolean_toggle"/>
                    <field name="audit_unique" widget="boolean_toggle"/>
                    <field name="audit_levier" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_campagne_offre_search" model="ir.ui.view">
            <field name="name">campagne.offre.search</field>
            <field name="model">campagne.offre</field>
            <field name="arch" type="xml">
                <search string="Offre">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Offre"/>
                    <separator/>
                    <field name="levier_id"/>
                    <field name="sf__id"/>
                </search>
            </field>
        </record>

        <record id="view_campagne_pivot" model="ir.ui.view">
            <field name="name">campagne.pivot</field>
            <field name="model">campagne.campagne</field>
            <field name="arch" type="xml">
                <pivot string="Analyse des campagnes">
                    <field name="cible_id" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="view_campagne_graph" model="ir.ui.view">
            <field name="name">campagne.graph</field>
            <field name="model">campagne.campagne</field>
            <field name="arch" type="xml">
                <graph string="Campagnes">
                    <field name="cible_id" type="row"/>
                </graph>
            </field>
        </record>

        <record id="action_campagne_log" model="ir.actions.act_window">
            <field name="name">Log</field>
            <field name="res_model">campagne.log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_campagne" model="ir.actions.act_window">
            <field name="name">Campagne</field>
            <field name="res_model">campagne.campagne</field>
            <field name="view_mode">tree,form,pivot,graph</field>
        </record>

        <record id="action_cible" model="ir.actions.act_window">
            <field name="name">Cible</field>
            <field name="res_model">campagne.cible</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_canal" model="ir.actions.act_window">
            <field name="name">Canal</field>
            <field name="res_model">campagne.canal</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_offre" model="ir.actions.act_window">
            <field name="name">Offre</field>
            <field name="res_model">campagne.offre</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_levier" model="ir.actions.act_window">
            <field name="name">Levier</field>
            <field name="res_model">campagne.levier</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_comite" model="ir.actions.act_window">
            <field name="name">Comité</field>
            <field name="res_model">campagne.comite</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_comite_sysmarlig" model="ir.actions.act_window">
            <field name="name">Comité sysmarlig</field>
            <field name="res_model">campagne.comite.sysmarlig</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_export_ops" model="ir.actions.act_window">
            <field name="name">Export ops</field>
            <field name="res_model">export.ops</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_account" model="ir.actions.act_window">
            <field name="name">Compte comptable</field>
            <field name="res_model">account.account</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('campagne.view_account_account_tree')})]"/>
        </record>

        <record id="action_analytic" model="ir.actions.act_window">
            <field name="name">Axe analytique</field>
            <field name="res_model">account.analytic.account</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('campagne.view_analytic_account_tree')})]"/>
        </record>

        <menuitem id="campagne_manager_menu" name="Campages / offres"/>

        <menuitem id="campagne_menu" name="Campagne" parent="campagne_manager_menu" action="action_campagne"/>
        <menuitem id="offre_menu" name="Offre" parent="campagne_manager_menu" action="action_offre"/>
        <menuitem id="config_menu" name="Configuration" parent="campagne_manager_menu"/>
        <menuitem id="comite_menu" name="Comite" parent="config_menu" action="action_comite"/>
        <menuitem id="comite_sysmarlig_menu" name="Comite sysmarlig" parent="config_menu" action="action_comite_sysmarlig"/>
        <menuitem id="cible_menu" name="Cible" parent="config_menu" action="action_cible"/>
        <menuitem id="canal_menu" name="Canal" parent="config_menu" action="action_canal"/>
        <menuitem id="levier_menu" name="Levier" parent="config_menu" action="action_levier"/>
        <menuitem id="account_menu" name="Compte comptable" parent="config_menu" action="action_account"/>
        <menuitem id="account_analytic_menu" name="Axe analytique" parent="config_menu" action="action_analytic"/>
        <menuitem id="log_menu" name="Log" parent="config_menu" action="action_campagne_log"/>
        <menuitem id="export_ops_menu" name="Export ops" parent="config_menu" action="action_export_ops"/>


        <record id="campagne_manager" model="res.groups">
            <field name="name">Campagne Manager</field>
        </record>
        <record id="cible_manager" model="res.groups">
            <field name="name">Cible Manager</field>
        </record>
        <record id="canal_manager" model="res.groups">
            <field name="name">Canal Manager</field>
        </record>
        <record id="levier_manager" model="res.groups">
            <field name="name">Levier Manager</field>
        </record>
        <record id="offre_manager" model="res.groups">
            <field name="name">Offre Manager</field>
        </record>
        <record id="comite_manager" model="res.groups">
            <field name="name">Comité Manager</field>
        </record>
        <record id="data_manager" model="res.groups">
            <field name="name">Data Manager</field>
        </record>



    </data>
</odoo>

