<odoo>
    <record id="view_synchro_wizard_form" model="ir.ui.view">
        <field name="name">synchro.wizard.form</field>
        <field name="model">synchro.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="mode"/>
                        <field name="update"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Synchroniser" type="object" name="action_sync" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_export_wizard_form" model="ir.ui.view">
        <field name="name">export.wizard.form</field>
        <field name="model">export.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="mode"/>
                        <field name="operation"/>
                        <field name="box_update"/>
                        <field name="active_model_name" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Campagne" invisible="active_model_name != 'campagne.campagne'">
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="siege"/>
                                <field name="comites"/>
                                <field name="cible"/>
                                <field name="canal"/>
                                <field name="creation_comites"/>
                                <field name="accounts"/> 
                            </group>
                        </page>
                        <page string="Offre" invisible="active_model_name != 'campagne.offre'">
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="campagne"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="levier"/>
                                <field name="siege"/>
                                <field name="comites"/>
                                <field name="accounts"/> 
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Exporter" type="object" name="action_export" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_export_wizard" model="ir.actions.act_window">
        <field name="name">Exporter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">export.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_export_wizard_form"/>
        <field name="target">new</field>
    </record>

    <record id="action_synchro_wizard" model="ir.actions.act_window">
        <field name="name">Synchroniser</field>
        <field name="res_model">synchro.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_synchro_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_synchro_wizard"
              name="Synchroniser"
              action="action_synchro_wizard"
              parent="config_menu"/>


</odoo>
